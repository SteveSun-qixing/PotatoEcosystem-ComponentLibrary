{
  "name": "chips-component-library-workspace",
  "private": true,
  "version": "0.0.1",
  "description": "Chips component library greenfield workspace",
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "volta": {
    "node": "22.18.0",
    "pnpm": "10.4.1"
  },
  "scripts": {
    "build": "pnpm -r --filter @chips/tokens --filter @chips/component-library build",
    "test": "pnpm -r --if-present test",
    "typecheck": "pnpm -r --if-present typecheck",
    "lint": "pnpm -r --if-present lint",
    "test:contracts": "pnpm --filter @chips/component-library test:contracts",
    "verify:naming": "pnpm --filter @chips/component-library verify:naming && pnpm --filter @chips/tokens verify:naming",
    "smoke:ecosystem": "bash ./scripts/smoke-ecosystem.sh",
    "verify": "pnpm verify:naming && pnpm build && pnpm test && pnpm typecheck && pnpm lint"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
